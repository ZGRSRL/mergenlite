# MergenLite Environment Variables

# SAM.gov API Key (Optional - for opportunity search and document download)
SAM_API_KEY=your_sam_api_key_here

# OpenAI API Key (Optional - for AI analysis and LLM features)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (Optional - for storing analysis results)
# For Docker: postgresql://postgres:postgres@db:5432/mergenlite
# For Local: postgresql://postgres:postgres@localhost:5432/mergenlite
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mergenlite

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Application Settings
PYTHONUNBUFFERED=1

